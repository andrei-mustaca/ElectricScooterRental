@model ElectricScooterRenta.Domain.Models.User
@{
Layout = "_Layout";
ViewBag.Title = "Детали администратора";
}

<style>
    body { font-family: Arial, sans-serif; background-color: #f8f9fa; color: #333; padding: 20px; }
    h2 { color: #222; margin-bottom: 20px; }
    .details { background: #fff; padding: 20px; border-radius: 8px; max-width: 400px; }
    .details p { margin-bottom: 10px; }
    .btn { padding: 8px 15px; border: none; border-radius: 4px; color: #fff; cursor: pointer; margin-top: 10px; text-decoration: none; }
    .btn-secondary { background-color: #6c757d; }
</style>

<h2>Детали администратора</h2>

<div class="details">
    <p><strong>ФИО:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Роль:</strong> @Model.Role</p>
</div>

<a asp-action="Admins" class="btn btn-secondary">Назад к списку</a>
