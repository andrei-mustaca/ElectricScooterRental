@model ElectricScooterRenta.Domain.Models.User

@{
    Layout = "_Layout";
}

<h2 style="color: white; margin-bottom: 20px;">Детали техника</h2>

<div style="
    background: #1b1b1b;
    padding: 20px;
    border-radius: 8px;
    width: 380px;
    color: #e9ecef;
    border: 1px solid #2b2b2b;
    box-shadow: 0 1px 0 rgba(255,255,255,0.05) inset;">
    
    <p style="margin: 10px 0;">
        <strong style="color:#cbd5e1; width:120px; display:inline-block;">ФИО:</strong>
        @Model.FullName
    </p>

    <p style="margin: 10px 0;">
        <strong style="color:#cbd5e1; width:120px; display:inline-block;">Email:</strong>
        @Model.Email
    </p>

    <p style="margin: 10px 0;">
        <strong style="color:#cbd5e1; width:120px; display:inline-block;">Роль:</strong>
        @Model.Role
    </p>
</div>

<a asp-action="Technicians"
   style="display:inline-block; margin-top: 15px; padding: 8px 14px;
          background: #6c757d; color: white; border-radius: 4px; text-decoration: none;">
    Назад
</a>