@model List<ElectricScooterRenta.Domain.Models.User>
@{
    Layout = "_Layout";   
  ViewBag.Title = "Список администраторов";
}

<h2 style="color: white;">Список администраторов</h2>

@if (TempData["Error"] != null)
{
    <div style="padding: 10px; background-color: #8b0000; color: white; border-radius: 4px; margin-bottom: 15px;">
        @TempData["Error"]
    </div>
}

<table style="border-collapse: collapse; width: 100%; font-family: Arial, sans-serif; background: #1b1b1b;">
    <thead style="background-color: #007bff; color: white;">
        <tr>
            <th style="padding: 8px; border: 1px solid #444;">ФИО</th>
            <th style="padding: 8px; border: 1px solid #444;">Email</th>
            <th style="padding: 8px; border: 1px solid #444;">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td style="padding: 8px; border: 1px solid #444; color: white;">@admin.FullName</td>
                <td style="padding: 8px; border: 1px solid #444; color: white;">@admin.Email</td>
                <td style="padding: 8px; border: 1px solid #444;">
                    <a class="btn btn-info" asp-action="AdminDetails" asp-route-id="@admin.Id">Детали</a>
                    <a class="btn btn-danger" asp-action="DeleteAdmin" asp-route-id="@admin.Id"
                       onclick="return confirm('Удалить администратора?');">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="margin-top: 15px;">
    @if (ViewBag.TotalPages > 1)
    {
        <div style="text-align: center;">
            <ul style="list-style: none; padding: 0; display: inline-flex; gap: 5px;">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    if (i == ViewBag.CurrentPage)
                    {
                        <li style="padding: 6px 12px; background-color: #007bff; color: white; border-radius: 4px;">@i</li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("Admins", new { page = i })"
                               style="padding: 6px 12px; border: 1px solid #ddd; border-radius: 4px; 
                                      text-decoration: none; color: #007bff;">
                                @i
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    }
</div>

<a class="btn btn-success" asp-action="CreateAdmin">Создать администратора</a>
