@model ElectricScooterRenta.Service.DTOs.AdminDTOs.UpdateScooterRequest
@using Microsoft.AspNetCore.Mvc.Rendering
<link rel="stylesheet" href="~/css/edit.css"/>

<h2>Редактировать самокат</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        <label asp-for="Color">Цвет</label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Speed">Скорость (км/ч)</label>
        <input asp-for="Speed" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Speed" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="BatteryLevel">Уровень батареи (%)</label>
        <input asp-for="BatteryLevel" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="BatteryLevel" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <select asp-for="Status" asp-items="ViewBag.Statuses" class="form-select"></select>
    </div>
    
    <div class="form-group">
        <label asp-for="Condition">Состояние</label>
        <select asp-for="Condition" asp-items="ViewBag.Conditions" class="form-select"></select>
    </div>
    
    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
