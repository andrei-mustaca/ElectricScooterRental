@model ElectricScooterRenta.Service.DTOs.AdminDTOs.CreateScooterRequest
<link rel="stylesheet" href="~/css/createScooter.css"/>
<h2>Добавить новый самокат</h2>

<form asp-action="CreateScooter" method="post">
    <div>
        <label>Цвет</label>
        <input asp-for="Color" />
        <span asp-validation-for="Color" style="color:red"></span>
    </div>

    <div>
        <label>Скорость (км/ч)</label>
        <input asp-for="Speed" type="number" step="0.1"/>
        <span asp-validation-for="Speed" style="color:red"></span>
    </div>

    <div>
        <label>Уровень батареи (%)</label>
        <input asp-for="BatteryLevel" type="number" step="0.1"/>
        <span asp-validation-for="BatteryLevel" style="color:red"></span>
    </div>

    <button type="submit">Добавить</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}