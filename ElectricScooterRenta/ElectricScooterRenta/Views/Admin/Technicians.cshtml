@model List<ElectricScooterRenta.Domain.Models.User>

@{
    Layout = "_Layout";
}

<h2 style="color: white; margin-bottom: 20px;">Список техников</h2>

<table style="width: 100%; border-collapse: collapse; background: #1b1b1b; border-radius: 8px; overflow: hidden; color: #e9ecef;">
    <thead>
    <tr>
        <th style="background: #28a745; color: white; padding: 10px; text-align: left;">ФИО</th>
        <th style="background: #28a745; color: white; padding: 10px; text-align: left;">Email</th>
        <th style="background: #28a745; color: white; padding: 10px; text-align: left;">Действия</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td style="padding: 10px; border-bottom: 1px solid #2d2d2d;">@t.FullName</td>
            <td style="padding: 10px; border-bottom: 1px solid #2d2d2d;">@t.Email</td>
            <td style="padding: 10px; border-bottom: 1px solid #2d2d2d;">
                <a asp-action="TechnicianDetails"
                   asp-route-id="@t.Id"
                   style="padding: 6px 12px; background: #17a2b8; border-radius: 4px; color: #fff; text-decoration: none; margin-right: 6px;">
                    Детали
                </a>

                <a asp-action="DeleteTechnician"
                   asp-route-id="@t.Id"
                   onclick="return confirm('Удалить техника?')"
                   style="padding: 6px 12px; background: #dc3545; border-radius: 4px; color: #fff; text-decoration: none;">
                    Удалить
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div style="margin-top: 15px;">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a asp-action="Technicians"
           asp-route-page="@i"
           style="
               padding: 5px 10px;
               border: 1px solid #28a745;
               color: @(i == ViewBag.CurrentPage ? "white" : "#28a745");
               background: @(i == ViewBag.CurrentPage ? "#28a745" : "transparent");
               border-radius: 4px;
               text-decoration: none;
               margin: 0 2px;">
            @i
        </a>
    }
</div>

<a asp-action="CreateTechnician"
   style="display:inline-block; margin-top: 15px; padding: 8px 14px; background: #28a745; color: white; border-radius: 4px; text-decoration: none;">
    Создать техника
</a>