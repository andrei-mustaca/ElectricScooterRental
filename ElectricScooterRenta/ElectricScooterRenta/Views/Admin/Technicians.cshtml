@model List<ElectricScooterRenta.Domain.Models.User>

<style>
    body { font-family: Arial; background: #f8f9fa; padding: 20px; }
    h2 { color: #222; }
    table { width: 100%; border-collapse: collapse; background: #fff; border-radius: 8px; }
    th { background: #28a745; color: white; padding: 10px; }
    td { padding: 10px; border: 1px solid #ddd; }
    .btn { padding: 6px 12px; border-radius: 4px; color: #fff; text-decoration: none; }
    .btn-info { background: #17a2b8; }
    .btn-danger { background: #dc3545; }
    .btn-success { background: #28a745; }
    .pagination a { padding: 5px 10px; border: 1px solid #28a745; color: #28a745; border-radius: 4px; text-decoration: none; margin: 0 2px; }
    .active { background: #28a745; color: white; }
</style>

<h2>Список техников</h2>

<table>
    <thead>
    <tr>
        <th>ФИО</th>
        <th>Email</th>
        <th>Действия</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var t in Model)
    {
        <tr>
            <td>@t.FullName</td>
            <td>@t.Email</td>
            <td>
                <a class="btn btn-info" asp-action="TechnicianDetails" asp-route-id="@t.Id">Детали</a>
                <a class="btn btn-danger" asp-action="DeleteTechnician" asp-route-id="@t.Id" onclick="return confirm('Удалить техника?')">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="pagination">
    @for (int i = 1; i <= ViewBag.TotalPages; i++)
    {
        <a class="@(i == ViewBag.CurrentPage ? "active" : "")" asp-action="Technicians" asp-route-page="@i">@i</a>
    }
</div>

<a class="btn btn-success" asp-action="CreateTechnician">Создать техника</a>